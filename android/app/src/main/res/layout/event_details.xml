<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/image_details"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:transitionName="@string/event_details_transition" />

        <TextView
            android:id="@+id/title_details"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/image_details"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="#FFFFFFFF"/>

        <LinearLayout
            android:id="@+id/first_details_item"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/image_details"
            android:layout_margin="3dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/date_details"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium" />

            <TextView
                android:id="@+id/place_details"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium" />

            <TextView
                android:id="@+id/time_details"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium" />
        </LinearLayout>

        <View
            android:id="@+id/space_1"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@id/first_details_item"
            android:background="@color/background_material_dark" />

        <LinearLayout
            android:id="@+id/second_details_item"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/space_1"
            android:layout_margin="3dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/summary_details"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium" />

            <TextView
                android:id="@+id/categories_details"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium" />
        </LinearLayout>

        <View
            android:id="@+id/space_2"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@id/second_details_item"
            android:background="@color/background_material_dark" />

        <LinearLayout
            android:id="@+id/third_details_item"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/space_2"
            android:layout_margin="3dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/creator_details"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Organisateur pas encore fait"
                android:textAppearance="?android:attr/textAppearanceMedium" />

            <TextView
                android:id="@+id/price_details"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium" />

            <TextView
                android:id="@+id/url_details"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium" />
        </LinearLayout>

        <View
            android:id="@+id/space_3"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@id/third_details_item"
            android:background="@color/background_material_dark" />

        <LinearLayout
            android:id="@+id/fourth_details_item"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/space_3"
            android:layout_margin="3dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/agemin_details"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium" />

            <TextView
                android:id="@+id/tags_details"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium" />
        </LinearLayout>

    </RelativeLayout>
</ScrollView>